{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vinsly",
  "version": "0.1.0",
  "identifier": "com.vinsly.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1220,
        "height": 780,
        "minWidth": 1000,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:allow-confirm",
            "dialog:allow-ask",
            "dialog:allow-message",
            "dialog:allow-open",
            "dialog:allow-save",
            "fs:allow-read-file",
            "fs:allow-write-file",
            "fs:allow-read-dir",
            "fs:allow-copy-file",
            "fs:allow-create",
            "fs:allow-remove",
            "fs:allow-rename",
            "fs:allow-exists",
            "fs:default",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:allow-load",
            "store:allow-delete",
            "store:allow-clear",
            "opener:default",
            "opener:allow-reveal-item-in-dir"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
