{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vinsly",
  "version": "0.1.0",
  "identifier": "com.vinsly.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1220,
        "height": 780,
        "minWidth": 1025,
        "minHeight": 599
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' https://api.lemonsqueezy.com https://github.com https://*.github.com",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: https:"
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:allow-open",
            "dialog:allow-save",
            "fs:allow-read-text-file",
            "fs:allow-write-text-file",
            "fs:allow-write-file",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:allow-load",
            "store:allow-delete",
            "store:allow-clear",
            "opener:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "./bin/scan-helper"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://updates.vinsly.app/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ5RkY2Qzg1QzZERjc1RUIKUldUcmRkL0doV3ovMmZyM1MyODNpYSs0bzcrMERMakJGWkJ4RngxNGU0MW85UnlVMkF5eXpkNW0K",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
