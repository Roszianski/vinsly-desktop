{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vinsly",
  "version": "0.9.7",
  "identifier": "com.vinsly.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": false,
      "id": "main-tray"
    },
    "windows": [
      {
        "title": "",
        "width": 1025,
        "height": 720,
        "minWidth": 1025,
        "minHeight": 720,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' https://api.lemonsqueezy.com https://raw.githubusercontent.com",
        "script-src": "'self'",
        "style-src-elem": "'self'",
        "style-src-attr": "'unsafe-inline'",
        "img-src": "'self' data: https:"
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:tray:default",
            "core:menu:default",
            "dialog:allow-open",
            "dialog:allow-save",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:allow-load",
            "store:allow-delete",
            "store:allow-clear",
            "opener:default",
            "updater:default",
            "process:allow-restart"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["app", "dmg", "deb", "appimage", "nsis"],
    "externalBin": [
      "./bin/scan-helper"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "licenseFile": "../LICENSE",
    "macOS": {
      "signingIdentity": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://raw.githubusercontent.com/Roszianski/vinsly-updates/main/latest.json"
      ],
      "_pubkey_note": "This IS the real signing key (fingerprint D9FF6C85C6DF75EB), NOT a template. Matches ~/.tauri/vinsly-signing.key.pub. Private key is in GitHub secrets.",
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ5RkY2Qzg1QzZERjc1RUIKUldUcmRkL0doV3ovMmZyM1MyODNpYSs0bzcrMERMakJGWkJ4RngxNGU0MW85UnlVMkF5eXpkNW0K",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
